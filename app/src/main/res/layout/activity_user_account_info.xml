                android:layout_height="wrap_content"
                android:text="Contact Info"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>

