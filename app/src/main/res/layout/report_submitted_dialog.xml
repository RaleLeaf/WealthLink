<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <FrameLayout
            android:id="@+id/animation_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp">

            <View
                android:id="@+id/circle_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background1" />

            <ImageView
                android:id="@+id/check_mark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp"
                android:src="@drawable/ic_check1"
                android:contentDescription="Success checkmark" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Submitted"
            android:textColor="#1F2545"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>